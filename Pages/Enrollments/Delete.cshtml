@page "{id:int}"
@model lmsextreg.Pages.Enrollments.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Enrollment Withdrawal</h3>
<div>
    <h4>Are you sure you want to withdraw this enrollment?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProgramEnrollment.LMSProgram):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProgramEnrollment.LMSProgram.LongName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ProgramEnrollment.LMSProgramID" />
        <input type="hidden" asp-for="ProgramEnrollment.StudentUserId" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
