@page "{id:int}"
@model lmsextreg.Pages.Enrollments.WithdrawModel

@{
    ViewData["Title"] = "Enrollment Withdrawal";
}

<h3>Enrollment Withdrawal</h3>
 <div class="input-group mb3">
    <h4>Are you sure you want to withdraw this enrollment?</h4>
    <hr />  
    <span style="font-weight:bold;">@Html.DisplayNameFor(model => model.ProgramEnrollment.LMSProgram):<span>
    <span>&nbsp;</span> 
    <span style="font-weight:normal;">@Html.DisplayFor(model => model.ProgramEnrollment.LMSProgram.LongName)</span>

    <form method="post">
            <div class="form-group">
                <label    asp-for="Input.Remarks"></label>:
                <textarea asp-for="Input.Remarks" class="form-control" rows="3" cols="40"></textarea>
            </div>        
            <input type="hidden" asp-for="ProgramEnrollment.LMSProgramID" />
            <input type="hidden" asp-for="ProgramEnrollment.StudentUserId" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" /> 
            </div>    
    </form>
     <a asp-page="./Index">Back to List</a>
</div>
